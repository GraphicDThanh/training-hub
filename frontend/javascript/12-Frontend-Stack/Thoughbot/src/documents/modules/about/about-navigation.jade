  .navigation__wrapper
    a(href="javascript:void(0)").navigation__logo
      img.navigation__logo--specific(src="images/logo.png" alt="Logo Image")
    a.navigation__logo--specific(href="javascript:void(0)")#js-mobile-menu.navigation-menu-button MENU
    nav(role="navigation").navigation__wrap-menu
      ul#js-navigation-menu.navigation__menu.navigation__menu--show
        li.navigation__menu-item
          a.navigation__link(href="javascript:void(0)") Products
        li.navigation__menu-item
          a.navigation__link(href="javascript:void(0)") About Us
        li.navigation__menu-item
          a.navigation__link(href="javascript:void(0)") Contact
        li.navigation__menu-item.navigation__menu-item--more
          a.navigation__link(href="javascript:void(0)") More
          ul.navigation__sub-menu
            li.navigation__sub-menu-item
              a.navigation__sub-link(href="javascript:void(0)") Submenu Item
            li.navigation__sub-menu-item.navigation__sub-menu-item
              a.navigation__sub-link(href="javascript:void(0)") Another Item
            li.more.navigation__sub-menu-item.navigation__sub-menu-item
              a.navigation__sub-link(href="javascript:void(0)") Item with submenu
              ul.navigation__sub-menu
                li.navigation__sub-menu-item
                  a.navigation__sub-link(href="javascript:void(0)") Sub-submenu
                li.navigation__sub-menu-item
                  a.navigation__sub-link(href="javascript:void(0)") An Item
            li.more.navigation__sub-menu-item.navigation__sub-menu-item--more
              a.navigation__sub-link(href="javascript:void(0)") Another submenu
              ul.navigation__sub-menu
                li.navigation__sub-menu-item
                  a.navigation__sub-link(href="javascript:void(0)") Sub-submenu
                li.navigation__sub-menu-item
                  a.navigation__sub-link(href="javascript:void(0)") An Item
    .navigation-tools
      .search-bar
        form(role="search")
          input(type="search" placeholder="Enter Search")
          button(type="submit")
            img(src="https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png" alt="Search Icon")
